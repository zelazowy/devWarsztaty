{% extends '::base.html.twig' %}

{% block content %}
    {% if error %}
        <div class="alert alert-warning">Błędne dane logowania</div>
    {% endif %}

    <h1>Zaloguj się</h1>
    <div class="row">
        <div class="col s6 offset-s3">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="col-md-4 col-md-offset-4 col-sm-12 text-left">
                    <label class="control-label" for="username">login</label>
                    <br/>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"
                           required="required"/>
                </div>
                <div class="col-md-4 col-md-offset-4 col-sm-12 text-left">
                    <label class="control-label" for="password">hasło</label>
                    <br/>
                    <input class="form-control" type="password" id="password" name="_password" required="required"/>
                </div>
                <div class="col-md-12 text-center">
                    <button class="btn btn-success light-green accent-4" type="submit" id="_submit" name="_submit">Zaloguj</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
